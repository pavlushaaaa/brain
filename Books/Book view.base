views:
  - type: table
    name: Table
    filters:
      and:
        - file.folder == "Brain/Books"
        - file.hasProperty("author")
  - type: cards
    name: View
    filters:
      and:
        - file.folder == "Brain/Books"
        - file.hasProperty("author")
    order:
      - title
      - author
    image: note.coverUrl
    imageFit: contain
